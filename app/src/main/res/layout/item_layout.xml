<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvCardView"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/holo_blue_bright"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDate"
            android:text="Date"
            android:textSize="16sp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvPositive"
            android:text="Positive"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:padding="2dp"
            android:background="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvNegative"
            android:text="Negative"
            android:background="@android:color/holo_blue_light"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvHospitalizedCurrently"
            android:text="HospitalizedCurrently"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:padding="2dp"
            android:background="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOnVentilatorCurrently"
            android:text="OnVentilatorCurrently"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:padding="2dp"
            android:background="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDeath"
            android:text="Death"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDateChecked"
            android:text="DateChecked"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            android:gravity="center"
            android:background="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>